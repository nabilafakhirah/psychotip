<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dec1"
            android:layout_width="129dp"
            android:layout_height="52dp"
            app:layout_constraintBottom_toBottomOf="@+id/visionTitle"
            app:layout_constraintEnd_toEndOf="@+id/visionTitle"
            app:layout_constraintStart_toStartOf="@+id/visionTitle"
            app:layout_constraintTop_toTopOf="@+id/visionTitle"
            app:srcCompat="@drawable/ic_titledecorator" />

        <TextView
            android:id="@+id/visionTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/muli_black"
            android:text="Our Vision"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/visionContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/muli"
            android:text="@string/paragraph_placeholder_text"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dec1"
            />


        <ImageView
            android:id="@+id/dec2"
            android:layout_width="129dp"
            android:layout_height="52dp"
            app:layout_constraintBottom_toBottomOf="@+id/missionTitle"
            app:layout_constraintEnd_toEndOf="@+id/missionTitle"
            app:layout_constraintStart_toStartOf="@+id/missionTitle"
            app:layout_constraintTop_toTopOf="@+id/missionTitle"
            app:srcCompat="@drawable/ic_titledecorator" />

        <TextView
            android:id="@+id/missionTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/muli_black"
            android:text="Our Mission"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/visionContent" />

        <TextView
            android:id="@+id/missionContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/muli"
            android:text="@string/paragraph_placeholder_text"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dec2"
            android:textColor="@color/colorBlack"
            />

        <ImageView
            android:id="@+id/dec3"
            android:layout_width="129dp"
            android:layout_height="52dp"
            app:layout_constraintBottom_toBottomOf="@+id/membersTitle"
            app:layout_constraintEnd_toEndOf="@+id/membersTitle"
            app:layout_constraintStart_toStartOf="@+id/membersTitle"
            app:layout_constraintTop_toTopOf="@+id/membersTitle"
            app:srcCompat="@drawable/ic_titledecorator" />

        <TextView
            android:id="@+id/membersTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/muli_black"
            android:text="Our Team"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/missionContent"
            android:textColor="@color/colorBlack"
            />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:rowCount="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dec3">

            <ImageView
                android:id="@+id/member1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:srcCompat="@drawable/avatar"
                tools:layout_editor_absoluteX="48dp"
                tools:layout_editor_absoluteY="221dp" />

            <ImageView
                android:id="@+id/member2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                app:srcCompat="@drawable/avatar"
                tools:layout_editor_absoluteX="48dp"
                tools:layout_editor_absoluteY="221dp" />

            <TextView
                android:id="@+id/memberName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="Name1\n— Role1 —"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="284dp"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:id="@+id/memberName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:text="Name2\n— Role2 —"
                android:textAlignment="center"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="284dp"
                android:textColor="@color/colorBlack"
                />

        </GridLayout>

        <Button
            android:id="@+id/contactButton"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/primary_button"
            android:text="Hubungi Kami"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gridLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>